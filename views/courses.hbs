<div class="row">
<div class="col-md-12">
<br>
<h2>Courses<a href="/courses/add" class="btn btn-success float-right">Add New Course</a></h2>
<hr />
<p>
    
{{this.courseId}}:{{this.courseCode}}-{{this.courseDescription}}<br>



</p>
        <div class="table-responsive">
        <table class="table ">
            <thead>
            <tr>
                <th>Course Code</th>
                <th>Course Description</th>
            </tr>
            </thead>
            {{#each courses}}
            <tbody>
                <tr>
                    <td><a href="/course/{{this.courseId}}">{{this.courseCode}}</a></td>
                    <td><a href="/students?course={{this.courseId}}">{{this.courseDescription}}</a></td>
                    <td><a href="/course/delete/{{this.courseId}}" class="btn btn-danger">remove</a></td>
                </tr>

            </tbody>
            {{/each}}
        </table>
        </div>
</div>
{{#unless courses}}
<div class="col-md-12 text-center">
<strong>{{message}}</strong>
</div>
{{/unless}}
</div>