<div class="row">
    {{#each student}}
<main class="col-md-12">
<br>
<h2>{{viewData.this.firstName}} {{viewData.this.lastName}} - Student: {{viewData.this.studentNum}}</h2>
<hr />
<form method="post" action="/student/update">
<input type="hidden" name="studentNum" value="{{this.studentNum}}" />
<fieldset>
<legend>Personal Information</legend>
<div class="row">
<div class="col-md-6">
<div class="form-group">
<label>First Name:</label>
<input class="form-control" name="firstName" type="text" value="{{viewData.this.firstName}}" />
</div>
</div>
<div class="col-md-6">
<div class="form-group">
<label>Last Name:</label>
<input class="form-control" name="lastName" type="text" value="{{viewData.this.lastName}}" />
</div>
</div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Email:</label>
                            <input class="form-control" name="email" type="email" value="{{viewData.this.email}}" />
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Address (Street):</label>
                            <input class="form-control" name="addressStreet" type="text" value="{{viewData.this.email}}" />
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Address (City):</label>
                            <input class="form-control" name="addressCity" type="text" value="{{viewData.this.email}}" />
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Address (Province):</label>
                            <input class="form-control" name="addressProvince" type="text" value="{{viewData.this.email}}" />
                        </div>
                    </div>
                </div>

            </fieldset>

            <fieldset>
                <legend>Academic Information</legend>
                <div class="row">
                    <div class="col-md-4">

                        <label>College Employment:</label><br />
                        {{#if viewData.this.TA}}
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="TA" id="TA"  checked >
                            <label class="form-check-label" for="TA">
                                Teaching Assistant
                            </label>
                        </div>
                        {{/if}}
                        <br />
                        {{#unless viewData.this.TA}}
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="TA" id="TA" >
                            <label class="form-check-label" for="TA">
                                Teaching Assistant
                            </label>
                        </div>
                        {{/unless}}
                    </div>


                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Enrollment Status:</label><br />
                            {{#equal viewData.this.status "Full Time" }}
                            <label  class="checkbox-inline">
                                <input type="radio" id="statusFT" name="status" checked value="{{viewData.this.status}}" /> Full Time
                            </label>
                            {{/equal}}
                            {{#equal viewData.this.status "Part Time" }}
                            <label class="checkbox-inline">
                                <input type="radio" id="statusPT" name="status"  checked value="{{viewData.this.status}}" /> Part Time
                            </label>
                            {{/equal}}
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="course">Enrolled in Course:</label>
                          {{#if viewData.courses}}
                    <select class="form-control" name="course" id="course">
                    <option value="">Select Course</option>
                    {{#each viewData.courses}}
                    <option value="{{courseId}}" {{#if selected}} selected {{/if}} >{{courseCode}} </option>
                    {{/each}}
                    </select>
                    {{else}}
                    <div>No Courses</div>
                    {{/if}}

                        </div>
                    </div>
                </div>


            </fieldset>

            <hr />

            <input type="submit" class="btn btn-primary float-right" value="Update Student" /><br /><br /><br />

        </form>

</main>
{{/each}}
</div>